<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="0dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="7dp">

            <ImageView
                android:id="@+id/pic"
                android:layout_width="100dp"
                android:layout_height="148dp"
                android:background="@drawable/middd"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_2"
                android:layout_toRightOf="@+id/pic"
                android:singleLine="true"
                android:text="肖申克的救赎"
                android:textColor="@color/hot_hui_text_cor"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/name"
                android:singleLine="true"
                android:text="(1994)"
                android:textColor="@color/hot_hui_text_cor"
                android:textSize="@dimen/text_size_13"/>

            <ImageView
                android:id="@+id/ggggo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_8"
                android:src="@drawable/go_pic"
                />

            <TextView
                android:id="@+id/english_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_5"
                android:layout_toRightOf="@+id/pic"
                android:singleLine="true"
                android:text="The Shawshank Redemption"
                android:textColor="@color/hot_hui_text_cor"
                android:textSize="@dimen/text_size_13"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/zhuyan_na"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/english_name"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_5"
                android:layout_toRightOf="@+id/pic"
                android:singleLine="true"
                android:text="主演："
                android:textColor="@color/hot_hui_text2_cor"
                android:textSize="@dimen/text_size_13"/>

            <TextView
                android:id="@+id/zhuyan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zhuyan_na"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_5"
                android:layout_toRightOf="@+id/pic"
                android:singleLine="true"
                android:text="蒂姆·罗宾斯"
                android:textColor="@color/hot_hui_text_cor"
                android:textSize="@dimen/text_size_13"/>

            <!--<com.ubetween.hadisnzl.view.CircleImageView-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_below="@+id/zhuyan_name"-->
            <!--android:layout_marginLeft="@dimen/space_10"-->
            <!--android:layout_marginTop="@dimen/space_5"-->
            <!--android:layout_toRightOf="@+id/pic"-->
            <!--android:src="@drawable/three_pic"-->
            <!--app:border_color="@color/black"-->
            <!--app:border_width="@dimen/space_1"/>-->

            <TextView
                android:id="@+id/xianxian"
                android:layout_width="0.9dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/zhuyan_name"
                android:background="@color/hot_line2_cor"/>


            <TextView
                android:id="@+id/daoyan_na"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/english_name"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginTop="@dimen/space_5"
                android:layout_toRightOf="@+id/xianxian"
                android:singleLine="true"
                android:text="导演："
                android:textColor="@color/hot_hui_text2_cor"
                android:textSize="@dimen/text_size_13"/>

            <TextView
                android:id="@+id/daoyan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/daoyan_na"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginTop="@dimen/space_5"
                android:layout_toRightOf="@+id/xianxian"
                android:singleLine="true"
                android:text="弗兰克·德拉邦特"
                android:textColor="@color/hot_hui_text_cor"
                android:textSize="@dimen/text_size_13"/>

            <!--<com.ubetween.hadisnzl.view.CircleImageView-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_below="@+id/daoyan_name"-->
            <!--android:layout_marginLeft="@dimen/space_10"-->
            <!--android:layout_marginTop="@dimen/space_5"-->
            <!--android:layout_toRightOf="@+id/xianxian"-->
            <!--android:src="@drawable/three_pic"-->
            <!--app:border_color="@color/black"-->
            <!--app:border_width="@dimen/space_1"/>-->


            <TextView
                android:id="@+id/leixing_na"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zhuyan_name"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_5"
                android:layout_toRightOf="@+id/pic"
                android:singleLine="true"
                android:text="影片类型："
                android:textColor="@color/hot_hui_text2_cor"
                android:textSize="@dimen/text_size_13"/>

            <TextView
                android:id="@+id/leixing_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zhuyan_name"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginTop="@dimen/space_5"
                android:layout_toRightOf="@+id/leixing_na"
                android:singleLine="true"
                android:text="犯罪/剧情"
                android:textColor="@color/hot_hui_text_cor"
                android:textSize="@dimen/text_size_13"/>

            <TextView
                android:id="@+id/pingfen_na"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leixing_name"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_5"
                android:layout_toRightOf="@+id/pic"
                android:singleLine="true"
                android:text="综合评分："
                android:textColor="@color/hot_hui_text2_cor"
                android:textSize="@dimen/text_size_13"/>

            <TextView
                android:id="@+id/pingfen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leixing_name"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginTop="@dimen/space_5"
                android:layout_toRightOf="@+id/pingfen_na"
                android:singleLine="true"
                android:text="9.6分"
                android:textColor="@color/hot_hui_text_cor"
                android:textSize="@dimen/text_size_13"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
